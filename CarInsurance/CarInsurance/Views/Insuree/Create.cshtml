@model CarInsurance.Models.Insuree

@{
  ViewBag.Title = "Create";
}

<h2>Create Insuree:</h2>
<h4>Please complete the form </h4>
<hr />

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

  <div class="form-group row">
    <label class="col-form-label col-sm-2">First Name</label>
    <div class="col-sm-10">
      <input name="FirstName" class="form-control" type="text">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Last Name</label>
    <div class="col-sm-10">
      <input name="LastName" class="form-control" type="text">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Email Address</label>
    <div class="col-sm-10">
      <input name="EmailAddress" class="form-control" type="text">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Date Of Birth</label>
    <div class="col-sm-10">
      <input name="DateOfBirth" class="form-control" type="text">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Car Year</label>
    <div class="col-sm-10">
      <input name="CarYear" class="form-control" type="text">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Car Make</label>
    <div class="col-sm-10">
      <input name="CarMake" class="form-control" type="text">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Car Model</label>
    <div class="col-sm-10">
      <input name="CarModel" class="form-control" type="text">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">DUI</label>
    <div class="col-sm-10">
      <input name="DUI" class="form-check-input" type="checkbox" value="true">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Speeding Tickets</label>
    <div class="col-sm-10">
      <input name="SpeedingTickets" class="form-control" type="text">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Full Coverage</label>
    <div class="col-sm-10">
      <input name="CoverageType" class="form-check-input" type="checkbox" value="true">
    </div>
  </div>
  <br />
  <div>
    <button class="btn btn-primary" type="submit">Create</button> 
    </div>

    }

    @section Scripts {
      @Scripts.Render("~/bundles/jqueryval")
    }

