@model CarInsurance.View_Models.Quote

@{
    ViewBag.Title = "Quote";
}

<h2>Insurance Quote</h2>

<hr />

      <div class="container">
        <div class="row justify-content-evenly">
          <div class="col-md-6">
            <h4>Your Details:</h4>
            <dl class="dl-horizontal">
              <dt>
                First Name
              </dt>

              <dd>
                @Html.DisplayFor(model => model.FirstName)
              </dd>

              <dt>
                Last Name
              </dt>

              <dd>
                @Html.DisplayFor(model => model.LastName)
              </dd>

              <dt>
                Email Address
              </dt>

              <dd>
                @Html.DisplayFor(model => model.EmailAddress)
              </dd>

              <dt>
                Date Of Birth
              </dt>

              <dd>
                @Model.DateOfBirth.ToString("yyyy-MM-dd")
              </dd>

              <dt>
                Car Year
              </dt>

              <dd>
                @Html.DisplayFor(model => model.CarYear)
              </dd>

              <dt>
                Car Make
              </dt>

              <dd>
                @Html.DisplayFor(model => model.CarMake)
              </dd>

              <dt>
                Car Model
              </dt>

              <dd>
                @Html.DisplayFor(model => model.CarModel)
              </dd>

              <dt>
                DUI
              </dt>

              <dd>
                @Html.DisplayFor(model => model.DUI)
              </dd>

              <dt>
                Speeding Tickets
              </dt>

              <dd>
                @Html.DisplayFor(model => model.SpeedingTickets)
              </dd>

              <dt>
                Full Coverage
              </dt>

              <dd>
                @Html.DisplayFor(model => model.CoverageType)
              </dd>

            </dl>
          </div>
          <div class="col-md-6">
            <h4>Your Detailed Quote:</h4>
            <dl class="dl-horizontal">
              <dt>
                Base Coverage
              </dt>
              <dd>
                $50.00
              </dd>
              <dt>
                Age Factor
              </dt>
              <dd>
                $@Html.DisplayFor(model => model.quoteAge)
              </dd>
              <dt>
                Car Factor
              </dt>
              <dd>
                $@Html.DisplayFor(model => model.quoteCar)
              </dd>
              <dt>
                Speeding Ticket Factor
              </dt>
              <dd>
                $@Html.DisplayFor(model => model.quoteTickets)
              </dd>
              <dt>
                DUI Factor
              </dt>
              <dd>
                $@Html.DisplayFor(model => model.quoteDUI)
              </dd>
                <dt>
                  Full Coverage
                </dt>
                <dd>
                  $@Html.DisplayFor(model => model.quoteCoverage)
                </dd>

              <dt style="font-size: 2rem;">
                Quote Total
              </dt>
              <dd style="font-size: 2rem; font-weight: bold;">
                $@ViewBag.Quote
              </dd>
            </dl>


          </div>
        </div>
      </div>


      <br />
      <p>
        @Html.ActionLink("Edit Details", "Edit", new { id = Model.Id })
      </p>
